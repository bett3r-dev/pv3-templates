{
  "compilerOptions": {
		"baseUrl": ".",
		"outDir": "./build",
		"rootDir": ".",
    "allowJs": true,
		"alwaysStrict": false,
		"checkJs": false,
		"declarationMap": true,
		"noImplicitAny": false,
		"strict": false,
		"strictBindCallApply": false,
		"strictFunctionTypes": false,
		"strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noErrorTruncation":true,
    "composite": true,
    // This one is important so @bett3r-dev/jsonschema-definer works with optionals
    "strictNullChecks": true,
    "paths": {
			"{{domainEventsPackageName}}": ["./packages/domain-events/src"],
			"{{clientLibraryPackageName}}": ["./packages/client-library/src"],
		}
	},
	"ts-node": {
    "esm": true,
    "compilerHost": true,
    "emit": true,
		"transpileOnly": true,
    "require": ["tsconfig-paths/register"],
		"ignore": [
			"(?:^|/)node_modules/",
      "build"
		]
	},
	"include": [
    "packages"
  ],
  "exclude": [
    "(?:^|/)node_modules/",
    "build"
  ]
}
